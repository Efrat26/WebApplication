
@{
    ViewBag.Title = "ViewImage";
}

<h2>Photo View</h2>
@if (ViewBag != null && ViewBag.name != null && ViewBag.photo != null)
{
    <h3>@ViewBag.name</h3>
    <h34>Date taken: @ViewBag.month, @ViewBag.year</h34>
    <p>
        <img src="@ViewBag.photo" alt="full size photo" />
    </p>

    <p>

        @Html.ActionLink("Back", "Photos", "First",
new {},
new { @class = "btn btn - info btn - xs" })

        @Html.ActionLink("Delete", "DirectToDeleteAfterView", "First",
new { },
new { @class = "btn btn-default btn-xs" })

    </p>

}


