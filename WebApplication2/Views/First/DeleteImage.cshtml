
@{
    ViewBag.Title = "DeleteImage";
}

<h2>Are you sure you want to delete this photo?</h2>
@if (ViewBag != null && ViewBag.name != null && ViewBag.photo != null)
{
    <h3>@ViewBag.name</h3>
    <h34>Date taken: @ViewBag.month, @ViewBag.year</h34>
    <p>
        <img src="@ViewBag.photo"  alt="full size photo" />
    </p>
    <button id="btnYes" onclick="deletePhoto()">Yes</button>
    <button id="btnNo" onclick="returnToPhotos()">No</button>
}
<script>
    function returnToPhotos() {
        window.history.back();
    }
</script>
<script>
        function deletePhoto() {
             document.getElementById("btnYes").disabled = true;
            document.getElementById("btnNo").disabled = true;
            var input = {};
            alert("button yes was pressed");
            $.post("@Url.Action("RemoveImage")", input, function (answer) {
                if (answer) {
                    alert("image removed!");
                } else {
                    alert("there was an error while removing image!");
                }
            });
            @Html.ActionLink("Config", "Config", "First");
        }
</script>

